
<div class="portlet box blue">
            <div class="portlet-title">
              <div class="caption">
              Country listings
              </div>
            </div>

            <div class="portlet-body form">
                
                <br/>
                <p style="padding-left:20px;">
                <%= link_to 'New Country', new_country_path, :class => "btn btn-default" %>

          </p>
          <table class="table table-bordered" style="padding:30px;">
            <thead>
              <tr>
                <th>Name</th>
                <th>Country code</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @countries.each do |country| %>
                <tr>
                  <td><%= country.name %></td>
                  <td><%= country.country_code %></td>
                  <td><%= link_to 'Show', country %></td>
                  <td><%= link_to 'Edit', edit_country_path(country) %></td>
                  <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

            </div>
</div>






