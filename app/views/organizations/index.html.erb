

<div class="portlet box blue">
            <div class="portlet-title">
              <div class="caption">
              Organization listings
              </div>
            </div>

            <div class="portlet-body form">
                
                <br/>
                <p style="padding-left:20px;">
                <%= link_to 'New Organization', new_organization_path, :class => "btn btn-default" %>

          </p>
          <table class="table table-bordered" style="padding:30px;">
            <thead>
              <tr>
                <th>Name</th>
                <th>Public name</th>
                <th>Type</th>
                <th>Pricing policy</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @organizations.each do |organization| %>
                  <tr>
                    <td>
                     <button type="button" class="btn btn-default btn-sm" id="downfirstorg<%= organization.id %>">+</button>
                     <%= organization.name %>
                    </td>
                    <td><%= organization.public_name %></td>
                    <td><%= organization.organization_type %></td>
                    <td><%= organization.pricing_policy %></td>
                    <td><%= link_to 'Show', organization %></td>
                    <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
                    <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>

                  <script type="text/javascript">
  
                    $('#downfirstorg<%= organization.id %>').on('click', function(){
                        
                         $.ajax({
                                  type: 'get',
                                  url: 'get_organization',
                                  dataType: 'JSON',
                                  data: {'id':"<%= organization.id %>"},
                                  complete: function(r){
                                     var raw_data = r.responseText;
                                     alert(raw_data);
                                  }
                               });

                    });

                    </script>



              <% end %>
            </tbody>
          </table>

            </div>
</div>







