<%= form_for @organization, :html => {:class => "form-horizontal" } do |f| %>
  <% if @organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
      <% @organization.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-body">

  <br/><br/>

    <div class="form-group">
      <label class="col-md-3 control-label">Name</label>
        <div class="col-md-9">
          <%= f.text_field :name %>
        </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label">Public name</label>
        <div class="col-md-9">
          <%= f.text_field :public_name %>
        </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label">Type</label>
        <div class="col-md-9">
           <%= f.select(:organization_type, Organization::TYPE,{prompt: 'Choose Type'}) %>
        </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label">Pricing Policy</label>
        <div class="col-md-9">
          <%= f.select(:pricing_policy, Organization::POLICY,{prompt: 'Choose Policy'}) %>
        </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label">Location 1</label>
        <div class="col-md-9">
          <input id="organization_location" name="organization[location][]" type="text">
        </div>
    </div>

    <div class="form-group">
     <label class="col-md-3 control-label">Location 2</label>
        <div class="col-md-9">
           <input id="organization_location" name="organization[location][]" type="text">
        </div>
    </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label">Country</label>
        <div class="col-md-9">
           <%=  f.select :country_id, options_for_select(@country_list,@organization.country_id),{prompt: 'Choose Country'} %>
        </div>
    </div>


    <div class="form-group">
        <h5 class="col-md-3 control-label"> 
        Parent organization?
        </h5>
        <div class="col-md-9">
           <%=  f.select :parent_id, options_for_select(@parent_list,@organization.parent_id),{prompt: 'Choose Parent'} %>
        </div>
    </div>


    

     <div class="row">
          <div class="col-md-offset-3 col-md-9">
            <%= f.submit :class=>"btn blue" %>
            <button type="button" class="btn default">Cancel</button>
          </div>
      </div>
      <br/><br/><br/>

<% end %>



